# Task Manager Environment Variables

# =================================
# Application Settings
# =================================
VITE_APP_NAME="Task Manager"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="development"

# =================================
# API Configuration
# =================================
VITE_API_URL="http://localhost:3001/api"
VITE_API_VERSION="v1"
VITE_API_TIMEOUT="10000"

# =================================
# Authentication
# =================================
# Auth0 Configuration
VITE_AUTH_DOMAIN="your-domain.auth0.com"
VITE_AUTH_CLIENT_ID="your_auth0_client_id"
VITE_AUTH_AUDIENCE="your_auth0_audience"

# JWT Configuration
VITE_JWT_SECRET="your_jwt_secret_key"
VITE_JWT_EXPIRES_IN="24h"

# =================================
# Database (Backend)
# =================================
DATABASE_URL="postgresql://username:password@localhost:5432/taskmanager"
DATABASE_POOL_SIZE="10"

# =================================
# Redis (Session/Cache)
# =================================
REDIS_URL="redis://localhost:6379"
REDIS_SESSION_SECRET="your_session_secret"

# =================================
# Email Service
# =================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your_app_password"
SMTP_FROM="Task Manager <noreply@taskmanager.com>"

# =================================
# File Upload
# =================================
UPLOAD_MAX_SIZE="5MB"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"
UPLOAD_DESTINATION="uploads/"

# =================================
# Analytics & Monitoring
# =================================
# Google Analytics
VITE_GA_TRACKING_ID="GA-XXXXXXXXX"

# Sentry Error Tracking
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# LogRocket Session Replay
VITE_LOGROCKET_APP_ID="your_logrocket_app_id"

# =================================
# Feature Flags
# =================================
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_ERROR_TRACKING="true"
VITE_ENABLE_PWA="false"
VITE_ENABLE_DARK_MODE="true"

# =================================
# Development Settings
# =================================
# Port for development server
VITE_PORT="5173"

# Enable/disable development tools
VITE_ENABLE_DEVTOOLS="true"
VITE_ENABLE_MOCK_API="false"

# =================================
# Security
# =================================
# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW="15"  # minutes
RATE_LIMIT_MAX="100"    # requests per window

# =================================
# Notifications
# =================================
# Push Notifications
VITE_VAPID_PUBLIC_KEY="your_vapid_public_key"
VAPID_PRIVATE_KEY="your_vapid_private_key"

# Email Templates
EMAIL_TEMPLATE_DIR="templates/emails"

# =================================
# Logging
# =================================
LOG_LEVEL="info"  # error, warn, info, debug
LOG_FORMAT="combined"  # combined, common, dev, short, tiny

# =================================
# Cache Configuration
# =================================
CACHE_TTL="3600"  # seconds
CACHE_MAX_SIZE="100"  # MB

# =================================
# Backup & Storage
# =================================
# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="taskmanager-uploads"

# =================================
# Third-party Integrations
# =================================
# Slack Integration
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Discord Integration
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK"

# =================================
# Testing
# =================================
# Test Database
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/taskmanager_test"

# Mock Services
MOCK_EMAIL_SERVICE="true"
MOCK_PAYMENT_SERVICE="true"

# =================================
# Production Only
# =================================
# SSL Configuration
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/key.pem"

# CDN Configuration
CDN_URL="https://cdn.taskmanager.com"

# Load Balancer
LOAD_BALANCER_URL="https://lb.taskmanager.com" 